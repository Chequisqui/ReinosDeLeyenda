<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.happygoatstudios.aardwolf"
      android:versionName="1.1.3" android:versionCode="17">
      
      
    <application android:icon="@drawable/aard_icon" android:label="Aardwolf RPG" android:theme="@android:style/Theme.NoTitleBar">
     	<activity android:name="com.happygoatstudios.aardwolf.AardLauncher"
                  android:label="Aardwolf RPG">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.happygoatstudios.bt.launcher.Launcher"
                  android:label="Aardwolf RPG"
                  >
        </activity>
        <!-- android:windowSoftInputMode="adjustResize" -->
        <activity android:name="com.happygoatstudios.bt.window.MainWindow"
        		  android:windowSoftInputMode="adjustResize"
        		  android:label="Aardwolf RPG"
        		 
        		  
				  android:configChanges="orientation|keyboard|keyboardHidden"
        		  android:launchMode = "singleTask">
        		  <intent-filter>
        		  	
        		  	<action android:name="com.happygoatstudios.bt.window.MainWindow.AARDWOLF_CLIENT"/>
        		  	<category android:name="android.intent.category.DEFAULT"/>
        		  </intent-filter>
        </activity>
        <activity android:name="com.happygoatstudios.bt.settings.HyperSettingsActivity"
        		  android:label="Settings Editor"
        		  
        		  
        		  android:configChanges="orientation|screenLayout|keyboard|keyboardHidden"
        		  android:noHistory = "true">
        		  <intent-filter>
        		  	<action android:name="com.happygoatstudios.bt.settings.HyperSettingsActivity"/>
        		  	<category android:name="android.intent.category.DEFAULT"/>
        		  </intent-filter>
        </activity>
        <service android:name="com.happygoatstudios.bt.service.StellarService"
        		 android:process=":aardwolf">
        		 <intent-filter>
        		 	
        		 	<action android:name="com.happygoatstudios.bt.service.IStellarService.AARDWOLF_CLIENT"/>
        		 </intent-filter>
        </service>
        		  

    </application>
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest> 
