<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width = "420px"
	android:layout_height = "wrap_content">
	
	<TextView
		android:id="@+id/number_setting_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_alignParentTop="true"
		android:textSize="30sp"
		android:gravity="right|center_vertical"/>
	
	<TextView
		android:id="@+id/number_setting_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/number_setting_value"
		android:layout_toLeftOf="@id/number_setting_value"
		android:textSize="24sp"
		android:gravity="left"
		android:textStyle="bold"/>
	
	<TextView
		android:id="@+id/number_setting_description"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="5sp"
		android:layout_toLeftOf="@id/number_setting_value"
		android:layout_alignBottom="@id/number_setting_value"
		android:layout_below="@id/number_setting_title"
		android:textSize="12sp"
		android:textStyle="italic"
		android:gravity="right"/>
	
</RelativeLayout>
	